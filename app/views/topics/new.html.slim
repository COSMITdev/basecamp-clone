.container-fluid.-fullHeight
  .row
    / sidenav (left)
    .col-sm-4.col-md-3.hidden-xs.sideNav
      = render 'partials/sidenav'
    / main content
    .col-sm-8.col-md-9.col-sm-offset-4.col-md-offset-3.mainContent
      .pageTitle.u-marginTop20.u-marginBot30
        h1 New Thread
      div
        = simple_form_for @topic, url: project_topics_path do |f|
          = f.error_notification 
          .form-inputs
            = f.input :title, label: 'Title', input_html: { class: 'u-marginBot10' }
            = f.input :body, label: 'Content', input_html: { class: '-big' }
          .form-actions.u-marginTop10
            = link_to 'Cancel', :back, class: 'btn -lg -default'
            = f.submit 'Create new Thread', class: 'btn -lg -primary u-floatRgt'