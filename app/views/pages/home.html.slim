section.footer.u-paddingTop30.u-paddingBot30
  .container
    .row
      .col-sm-10.u-centered
        .row
          .col-sm-6
            = link_to root_path do
              h3.footer-brand Basecamp Clone
          .col-sm-6
            ul.u-floatRgt.text-right
              - if current_user
                li
                  = link_to 'Profile', edit_user_registration_path, class: 'u-linkInverse u-marginRgt15'
                li
                  = link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'u-linkInverse'
              - else
                li
                  = link_to 'Sign Up', new_user_registration_path, class: 'u-linkInverse u-marginRgt15'
                li
                  = link_to 'Sign In', new_user_session_path, class: 'u-linkInverse'

